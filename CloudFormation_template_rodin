Description: CloudFormation template to create an EC2 instance with specified configurations.

Resources:
  EC2Instance:
    Type: AWS::EC2::Instance
    Properties:
      InstanceType: t2.micro
      ImageId: ami-0c55b159cbfafe1f0  # Amazon Linux 2 64-bit x86_64 AMI ID
      KeyName: EC2_PostgreSQL_Server_Ivan_Rodin
      IamInstanceProfile:
        Name: AWS_EC2_full_access_S3
      SecurityGroupIds:
        - sg-0fbf42a5fb4bc1004  # Security Group ID for dilab-training
      BlockDeviceMappings:
        - DeviceName: /dev/xvda
          Ebs:
            VolumeSize: 8
            VolumeType: gp3
        - DeviceName: /dev/sdb
          Ebs:
            VolumeSize: 10
            VolumeType: gp3
      MetadataOptions:
        HttpTokens: required
        HttpEndpoint: enabled
        HttpPutResponseHopLimit: 2
        HttpProtocolIpv6: disabled
        HttpAllowNonTls: disabled
        InstanceMetadataTags: enabled
